<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>
<beans>
    <bean id="treeDumpEngine" class="com.andreikubar.alfresco.migration.TreeDumpEngine">
        <constructor-arg ref="ServiceRegistry"/>
        <property name="exportNodeBuilder" ref="exportNodeBuilder"/>
        <property name="csvOutputDir">
            <value>C:/tmp/alfresco</value>
        </property>
        <property name="rootNodeListInput">
            <value>C:/tmp/rootnodes.csv</value>
        </property>
        <property name="checkPhysicalExistence">
            <value>true</value>
        </property>
        <property name="contentStoreBase">
            <value>C:/Alfresco4/alf_data/contentstore</value>
        </property>

    </bean>

    <bean id="exportService" class="com.andreikubar.alfresco.migration.exporter.ExportService">
        <constructor-arg ref="ServiceRegistry"/>
        <property name="exportNodeBuilder" ref="exportNodeBuilder"/>
    </bean>

    <bean id="exportNodeBuilder" class="com.andreikubar.alfresco.migration.exporter.ExportNodeBuilder">
        <constructor-arg ref="ServiceRegistry"/>
        <property name="useCmName">
            <value>true</value>
        </property>
    </bean>

    <bean id="importEngine" class="com.andreikubar.alfresco.migration.importer.ImportEngine">
        <constructor-arg ref="ServiceRegistry"/>
    </bean>

    <bean id="webscript.com.andreikubar.alfresco.migration.treedump.get"
          class="com.andreikubar.alfresco.migration.webscripts.TreeDump" parent="webscript">
        <constructor-arg ref="treeDumpEngine"/>
    </bean>

    <bean id="webscript.com.andreikubar.alfresco.migration.treedump-shutdown.get"
          class="com.andreikubar.alfresco.migration.webscripts.TreeDumpShutdown" parent="webscript">
        <constructor-arg ref="treeDumpEngine"/>
    </bean>

    <bean id="webscript.com.andreikubar.alfresco.migration.initiateImport.get"
          class="com.andreikubar.alfresco.migration.webscripts.InitiateImpotWebscript" parent="webscript">
        <property name="importEngine" ref="importEngine"/>
    </bean>

    <bean id="webscript.com.andreikubar.alfresco.migration.exportMetadata.get"
          class="com.andreikubar.alfresco.migration.webscripts.ExportMetadataWebscript" parent="webscript">
        <property name="exportService" ref="exportService"/>
    </bean>
</beans>